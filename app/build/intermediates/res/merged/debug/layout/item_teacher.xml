<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/teacher_first"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John" />

    <TextView
        android:id="@+id/teacher_last"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doe"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/teacher_email"
        android:layout_toRightOf="@+id/teacher_email" />

    <TextView
        android:id="@+id/teacher_email"
        android:textSize="16dp"
        android:text="johndoe@rhs.com"
        android:layout_width="wrap_content"
        android:layout_below="@id/teacher_first"
        android:layout_height="wrap_content" />

</RelativeLayout>