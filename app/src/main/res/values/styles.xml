<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8A1E19</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#8A1E19</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">#00B0FF</item>
        <!-- Blue -->
    </style>

    <style name="DialogButtonBar">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="CustomDialogTheme"
        parent="@android:style/Theme.Dialog">
        <item
            name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item
            name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Wendlerized.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@drawable/float_label</item>
        <item name="android:textSize">12dp</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="DialogButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DialogButton.Positive">
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/list_background</item>
    </style>
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="style_setting_line" parent="match_wrap">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:height">1dp</item>
        <item name="android:background">@color/text_black_87</item>
    </style>

    <style name="style_setting_text" parent="wrap_wrap">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_setting_item_title" parent="style_setting_text">
        <item name="android:layout_gravity">left</item>
    </style>


    <style name="DialogTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar" >
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="background">@color/maroon</item>

    </style>

    <style name="Theme.MaterialSheetFab.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.MaterialSheetFab" parent="Theme.MaterialSheetFab.Base" />

    <style name="ThemeOverlay.MaterialSheetFab.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@color/maroon</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@color/theme_accent</item>
    </style>

    <style name="ThemeOverlay.MaterialSheetFab.ActionBarh.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MaterialSheetFab.ToolBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialSheetFab.ActionBar.Popup</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Widget.MaterialSheetFab.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="Widget.MaterialSheetFab.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fab_spacing</item>
        <item name="android:layout_marginBottom">@dimen/fab_spacing</item>
        <item name="android:layout_marginLeft">@dimen/fab_spacing</item>
        <item name="android:layout_marginRight">@dimen/fab_spacing</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/fab_elevation</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="Widget.MaterialSheetFab.Note.List" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/note_spacing</item>
        <item name="android:paddingLeft">@dimen/note_spacing</item>
        <item name="android:paddingRight">@dimen/note_spacing</item>
        <item name="android:paddingBottom">@dimen/fab_list_spacing</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/note_spacing</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="contentPadding">@dimen/note_content_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/note_corner_radius</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white_87</item>
        <item name="android:textSize">@dimen/note_textsize</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Note.Title" parent="TextAppearance.MaterialSheetFab.Note">
        <item name="android:textSize">@dimen/note_title_textsize</item>
    </style>

    <style name="Widget.MaterialSheetFab.Snackbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/snackbar_height</item>
        <item name="android:paddingLeft">@dimen/snackbar_spacing</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/background_snackbar</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Snackbar.Message" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_white_87</item>
        <item name="android:textSize">@dimen/snackbar_textsize</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Snackbar.Action" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/snackbar_spacing</item>
        <item name="android:paddingRight">@dimen/snackbar_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:textSize">@dimen/snackbar_textsize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ThemeOverlay.MaterialSheetFab.ActionBar.Popup"></style>

    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="about_About"/>
    <style name="about_About.wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="about_sub_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="about_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="about_staffIcon">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="about_description" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/about_description_color</item>
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>

    <style name="about_job" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/about_description_color</item>
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>

    <style name="about_separator">
        <item name="android:layout_height">@dimen/about_separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/about_separator_color</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="about_elementTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/about_text_color</item>
        <item name="android:textSize">@dimen/about_item_text_size</item>
    </style>

    <style name="about_staffTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/about_text_color</item>
        <item name="android:textSize">@dimen/about_job_text_size</item>
    </style>

    <style name="about_groupTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/about_item_text_color</item>
        <item name="android:textSize">@dimen/about_group_item_text_size</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#fffff0</item>
    </style>


</resources>
